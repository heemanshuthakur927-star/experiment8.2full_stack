// -------------------------
// Fake Auth / JWT helpers
// -------------------------
function fakeLoginAPI(email, password, role) {
  return new Promise((resolve, reject) => {
    setTimeout(() => {
      // super basic demo check
      if (!email || !password) return reject("Email & password required");
      if (password !== "password123") return reject("Invalid credentials");

      // payload with role & expiry (1 hour)
      const payload = { email, role, exp: Date.now() + 60 * 60 * 1000 };
      const token = btoa(JSON.stringify(payload));
      resolve(token);
    }, 600);
  });
}

function decodeJWT(token) {
  try {
    return JSON.parse(atob(token));
  } catch (_) {
    return null;
  }
}

function isTokenValid(token) {
  const data = decodeJWT(token);
  if (!data) return false;
  return data.exp && data.exp > Date.now();
}

function getAuthData() {
  const token = localStorage.getItem("jwt");
  if (!token || !isTokenValid(token)) return null;
  return decodeJWT(token);
}

function logoutNow() {
  localStorage.removeItem("jwt");
}

// -------------------------
// Small Auth Hook
// -------------------------
function useAuth() {
  const [auth, setAuth] = useState(() => getAuthData());

  useEffect(() => {
    const id = setInterval(() => {
      // keep state in sync if token expires or changes from other tabs
      const next = getAuthData();
      setAuth((prev) => {
        const same = JSON.stringify(prev) === JSON.stringify(next);
        return same ? prev : next;
      });
    }, 1000);
    return () => clearInterval(id);
  }, []);

  const isAuthenticated = !!auth;
  const role = auth?.role ?? null;
  const email = auth?.email ?? null;

  return { isAuthenticated, role, email, auth };
}

// -------------------------
// Route Guards
// -------------------------
function ProtectedRoute({ children }) {
  const token = localStorage.getItem("jwt");
  if (!token || !isTokenValid(token)) return <Navigate to="/login" replace />;
  return children;
}

function RoleRoute({ children, allow = [] }) {
  const token = localStorage.getItem("jwt");
  if (!token || !isTokenValid(token)) return <Navigate to="/login" replace />;
  const payload = decodeJWT(token);
  const ok = allow.length === 0 || allow.includes(payload.role);
  if (!ok) return <Navigate to="/403" replace />;
  return children;
}

